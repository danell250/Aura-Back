# Backend Environment Configuration
# Copy this file to .env and update with your values

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGO_URI=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/YOUR_DATABASE?retryWrites=true&w=majority

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5000,http://localhost:5173,https://auraradiance.vercel.app,https://auraraidiate.netlify.app

# File Upload Configuration
MAX_FILE_SIZE=52428800
UPLOAD_DIR=uploads

# Optional: If you want to re-enable Gemini AI features later
# GEMINI_API_KEY=your_gemini_api_key_here
