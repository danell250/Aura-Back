# Backend Environment Configuration
# Copy this file to .env and update with your values

# Server Configuration
PORT=5000
NODE_ENV=development
# The URL where this backend is deployed
BACKEND_URL=http://localhost:5000
# The URL where the frontend is deployed
VITE_FRONTEND_URL=http://localhost:5173

# Database Configuration
MONGO_URI=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/YOUR_DATABASE?retryWrites=true&w=majority

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5000,http://localhost:5173,https://auraradiance.vercel.app,https://auraradiance.netlify.app

# Admin Configuration
ADMIN_EMAIL=admin@example.com

# File Upload Configuration
MAX_FILE_SIZE=52428800
UPLOAD_DIR=uploads

# Session Configuration
SESSION_SECRET=your_session_secret_key_here

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# Discord OAuth Configuration
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_CALLBACK_URL=http://localhost:5000/api/auth/discord/callback

# SendGrid Configuration
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=no-reply@aura.net.za
SENDGRID_FROM_NAME=Aura

# Optional: If you want to re-enable Gemini AI features later
# GEMINI_API_KEY=your_gemini_api_key_here
